@model List<HotelAbshar.Domain.Entities.Product.ProductComment>
@{
    Layout = null;
}
@inject HotelAbshar.Application.Interfaces.IUserService _userService
@using HotelAbshar.Common.Convertors
<article class="theme-reviews-item">
    <div class="row" data-gutter="10">

        @foreach (var item in Model)
        {
            <div class="col-md-12">
                <div class="theme-reviews-rating">
                    <div class="theme-reviews-rating-header">
                        <span class="theme-reviews-rating-num">@_userService.GetUserNameByUserID(item.UserID) </span>
                        <span class="theme-reviews-rating-title">@item.DateTime.ToShamsi()</span>
                    </div>
                    <div class="theme-reviews-rating-bar">
                        <div style="width:99%;"></div>
                    </div>
                </div>
                <div class="theme-reviews-item-body">
                    <p class="theme-reviews-item-text">@item.Text</p>
                </div>
            </div>
        }
    </div>
</article>
@{ 
    
        int nextPageId = (Model.Count / 4) + 1;
}
<div class="row">
    <div class="col-md-6 col-md-offset-5">
        <a onclick="pageComment(@nextPageId)" class="theme-reviews-more"> مشاهده بیشتر <i class="fa fa-chevron-down"></i> </a>
    </div>
</div>
